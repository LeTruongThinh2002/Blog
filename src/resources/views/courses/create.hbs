<form method="POST" action="/courses/store">
  <h3>Created Courses</h3>
  <div class="mb-3">
    <label for="name" class="form-label">Courses name</label>
    <input type="text" class="form-control" name="name" id="name" />
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Courses description</label>
    <textarea
      class="form-control"
      name="description"
      id="description"
    ></textarea>
  </div>
  <div class="mb-3">
    <label for="image" class="form-label">Courses image</label>
    <input type="text" class="form-control" name="image" id="image" />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>